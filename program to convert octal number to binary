#include<stdio.h>
int convertOctalTodecimal(int octalNum){
    int decNum = 0, base = 1;
    while (octalNum != 0){
        int rem = octalNum % 10;
        decNum += rem * base;
        base *= 8;
        octalNum /= 10;
    }
    printf("Decimal Number = %d", decNum);
    return decNum;
}
int convertDecimalToBinary(int decNum){
    int bin = 0, base = 1;
    while (decNum != 0){
        int rem = decNum % 2;
        bin += rem * base;
        base *= 10;
        decNum /= 2;
    }
    return bin;
}
    int main(){
        int num;
        printf("Enter an octal number: ");
        scanf("%d", &num);
        int binary = convertDecimalToBinary(convertOctalTodecimal(num));
        printf("binary of octal number %d is %d", num, binary);
        return 0;
    }
