#include<stdio.h>
#include<string.h>
#include<stdlib.h>
int convertOctalTodecimal(int octalNum){
    int decNum = 0, base = 1;
    while (octalNum != 0){
        int rem = octalNum % 10;
        decNum += rem * base;
        base *= 8;
        octalNum /= 10;
    }
    return decNum;
}
char* convertDecimalToHexa(int decNum){
    int n;
    char *hexa = (char*)callo(100,1);
    while(decNum != 0 ){
        int rem = decNum%16;
        char str[2];
        if(rem >=0 && rem<=9)
        sprintf(str, "%d", rem);
        else if (rem == 10)
        str[0] = 'A';
        else if (rem == 11)
        str[0] = 'B';
        else if (rem == 12)
        str[0] = 'C';
        else if(rem == 13)
        str[0] = 'D';
        else if (rem == 14)
        str[0] = 'E';
        else
        str[0] = 'F';
        str[1] = '\0';
        strcat(hexa, str);
        decNum = decNum/16;
    }
    strrev(hexa);
    return 0;
}
int main(){
    int num;
    printf("Enter Octal Number: ");
    scanf("%d", &num);
    char *hex = convertDecimaltoHexa(convertOctalToDecimal(num));
    printf("Hexa-Decimal of octal %d is %s", num, hex);
    return 0;

}
